<UserControl
    x:Class="Omnius.Xeus.Ui.Desktop.Controls.DownloadControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dg="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.DataGrid"
    xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
    xmlns:ia="clr-namespace:Avalonia.Xaml.Interactions.Core;assembly=Avalonia.Xaml.Interactions"
    xmlns:local="clr-namespace:Omnius.Xeus.Ui.Desktop.Controls;assembly=Omnius.Xeus.Ui.Desktop"
    xmlns:bs="clr-namespace:Omnius.Core.Avalonia.Behaviors;assembly=Omnius.Core.Avalonia"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:CompileBindings="True"
    x:DataType="local:DownloadControlViewModel"
    mc:Ignorable="d"
    d:DesignWidth="800"
    d:DesignHeight="500" >

    <Grid RowDefinitions="Auto, *">
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="8">
            <Button Height="32" Width="120" Margin="8" Content="Add file" Command="{Binding RegisterCommand}"/>
        </StackPanel>
        <dg:DataGrid
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            CanUserResizeColumns="True"
            Items="{Binding DownloadingFiles}" >
            <i:Interaction.Behaviors>
                <bs:DataGridBindSelectedItemsBehavior SelectedItems="{Binding SelectedFiles}" />
            </i:Interaction.Behaviors>
            <dg:DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Copy As">
                        <MenuItem Command="{Binding ItemCopySeedCommand}" Header="Copy Seed"/>
                    </MenuItem>
                </ContextMenu>
            </dg:DataGrid.ContextMenu>
            <dg:DataGrid.Columns>
                <dg:DataGridTextColumn
                    Header="Name"
                    Binding="{ReflectionBinding Name}"
                    Width="Auto" />
                <dg:DataGridTextColumn
                    Header="Creation Time"
                    Binding="{ReflectionBinding CreationTime}"
                    Width="Auto" />
                <dg:DataGridTextColumn
                    Header="State"
                    Binding="{ReflectionBinding State}"
                    Width="Auto" />
            </dg:DataGrid.Columns>
        </dg:DataGrid>
    </Grid>

</UserControl>
