<Window
    x:Class="Omnius.Axis.Ui.Desktop.Views.Main.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dataGrid="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.DataGrid"
    xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
    xmlns:ia="clr-namespace:Avalonia.Xaml.Interactions.Core;assembly=Avalonia.Xaml.Interactions"
    xmlns:local="clr-namespace:Omnius.Axis.Ui.Desktop.Views.Main;assembly=Omnius.Axis.Ui.Desktop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Axis"
    d:DesignHeight="500"
    d:DesignWidth="800"
    x:CompileBindings="False"
    x:DataType="local:MainWindowViewModelBase"
    Background="{x:Null}"
    ExtendClientAreaTitleBarHeightHint="-1"
    ExtendClientAreaToDecorationsHint="True"
    FontFamily="Meiryo UI, Lucida Grande, Ubuntu"
    FontSize="14"
    Foreground="{StaticResource SystemBaseHighColor}"
    TransparencyLevelHint="AcrylicBlur"
    mc:Ignorable="d">

    <Panel>
        <DockPanel HorizontalAlignment="Stretch">
            <ExperimentalAcrylicBorder DockPanel.Dock="Left" Width="240">
                <ExperimentalAcrylicBorder.Material>
                    <ExperimentalAcrylicMaterial TintColor="Black" MaterialOpacity="0.85" TintOpacity="1" />
                </ExperimentalAcrylicBorder.Material>
                <AutoCompleteBox HorizontalAlignment="Stretch" Margin="20 40 20 0" Watermark="Search" Items="{Binding SearchItems}" />
            </ExperimentalAcrylicBorder>
            <ExperimentalAcrylicBorder IsHitTestVisible="False">
                <ExperimentalAcrylicBorder.Material>
                    <ExperimentalAcrylicMaterial MaterialOpacity="0.85" TintOpacity="1" />
                </ExperimentalAcrylicBorder.Material>
                <TextBlock Text="{Binding #TabControl.SelectedItem.Header}" Margin="40 20" FontSize="32" FontWeight="Light" />
            </ExperimentalAcrylicBorder>
        </DockPanel>


        <TabControl
            x:Name="TabControl"
            Margin="0,40,0,20"
            Classes="sidebar">
            <TabItem Header="Status">
                <local:StatusControl DataContext="{Binding StatusControlViewModel}" IsVisible="{Binding #StatusListBoxItem.IsSelected}" />
            </TabItem>
            <TabItem Header="Peers">
                <local:PeersControl DataContext="{Binding PeersControlViewModel}" IsVisible="{Binding #PeersListBoxItem.IsSelected}" />
            </TabItem>
            <TabItem Header="Search">
                <local:SearchControl IsVisible="{Binding #SearchListBoxItem.IsSelected}" />
            </TabItem>
            <TabItem Header="Download">
                <local:DownloadControl DataContext="{Binding DownloadControlViewModel}" IsVisible="{Binding #DownloadListBoxItem.IsSelected}" />
            </TabItem>
            <TabItem Header="Upload">
                <local:UploadControl DataContext="{Binding UploadControlViewModel}" IsVisible="{Binding #UploadListBoxItem.IsSelected}" />
            </TabItem>
        </TabControl>
    </Panel>
</Window>
